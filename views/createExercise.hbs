<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<div class ="d-flex align-items-center flex-column gap-3 ">
    <h1>Create New Exercise</h1>
    <form id="add-exercise-form" class="needs-validation col-md-4" novalidate>
        <div class="form-group required mb-3 ">
            <label class="control-label" for="input-exercise-name">Exercise Name</label>
            <div class="input-group">
                <input type="text" class="form-control" name="input-exercise-name" id="input-exercise-name" placeholder="Enter Exercise Name" required>
                <div class="invalid-feedback">
                    Exercise Name is required.
                </div>
            </div>
        </div>
        <label for="input-exercise-sets">Sets: </label>
        <input type="number" name="input-exercise-sets" id="input-exercise-sets">
        <label for="input-exercise-reps">Reps: </label>
        <input type="number" name="input-exercise-reps" id="input-exercise-reps">
        <label for="input-exercise-weight">Weight: </label>
        <input type="number" name="input-exercise-weight" id="input-exercise-weight">
        <label for="input-exercise-bv">Berkhan Value: </label>
        <input type="number" name="input-exercise-bv" id="input-exercise-bv">
    
        <input type="submit">
    </form>
    <script src="/js/add_exercise.js"></script>
</div>
<script>
// Example starter JavaScript for disabling form submissions if there are invalid fields
(function () {
  'use strict'
  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  var forms = document.querySelectorAll('.needs-validation')

  // Loop over them and prevent submission
  Array.prototype.slice.call(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated')
      }, false)
    })
})()
</script>